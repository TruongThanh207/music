<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_margin="15dp"
            android:id="@+id/textdanhsach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="1"/>
        <TextView
            android:id="@+id/texttenbaihat"
            android:textColor="#F000"
            android:text="Ten Bai Hat"
            android:layout_toRightOf="@id/textdanhsach"
            android:maxLines="1"
            android:maxWidth="250dp"
            android:ellipsize="end"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Ca si"
            android:textSize="17sp"
            android:ellipsize="end"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/textdanhsach"
            android:layout_below="@id/texttenbaihat"
            android:id="@+id/texttencasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/imgluotthich"
            android:layout_width="30dp"
            android:background="@drawable/iconlove"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>